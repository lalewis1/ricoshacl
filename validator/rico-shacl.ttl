PREFIX : <https://www.ica.org/standards/RiC/ontology#>
PREFIX ont: <https://kurrawong.ai/validator/rico#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX schema: <https://schema.org/>
PREFIX sh: <http://www.w3.org/ns/shacl#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>

:RecordShape
    a sh:NodeShape ;
    rdfs:isDefinedBy ont: ;
    sh:property
        [
            sh:class :Relation ;
            sh:message "AccumulationRelation must be of type Relation" ;
            sh:minCount 0 ;
            sh:path :accumulationRelation ;
        ] ;
    sh:targetClass :Record ;
.
ont:
    a owl:Ontology ;
    owl:versionIRI :0.0.1 ;
    owl:versionInfo "0.0.1: First release, partial implementation only." ;
    schema:creator "https://kurrawong.ai/people#lawson-lewis" ;
    schema:dateCreated "2026-01-02"^^xsd:date ;
    schema:dateModified "2026-01-02"^^xsd:date ;
    schema:definition "Unofficial SHACL Shapes Validator for the Records in Contect Ontology [RiC-O]"@en ;
    schema:name "RiC-O Validator" ;
    schema:publisher <https://kurrawong.ai> ;
.
